@require "normalize.css/normalize.css"

html {
	font 18px/28px "Proxima Nova", sans-serif
	color #243343
}

.text-input {
	display inline-block
	vertical-align middle
	box-sizing border-box
	max-width 100%
	height 60px
	border 1px solid #cfd2d7
	border-radius 999px
}

.btn {
	display inline-block
	vertical-align middle
	box-sizing border-box
	max-width 100%
	padding 21px
	border 0
	line-height 28px
	font-size 24px
	text-align center
	font-weight 600
	border-radius 999px
	background #fff801
	color inherit
	cursor pointer

	&:hover {
		background #ffe501
	}

	&:active {
		background #f5dc00
	}
}

.btn_outline {
	padding 10px
	font-size 15px
	border 1px solid #000
	background #fbfbfc

	&:hover {
		background #f0f1f2
	}

	&:active {
		background #e5e6e9
	}
}

.container {
	margin-left auto
	margin-right auto
	max-width 1172px
	padding-left  14px
	padding-right 14px
}

.logo {
	margin 44px auto 42px
	display block
	width 158px
	height 178px
	overflow hidden
	white-space nowrap
	text-indent 100%
	color transparent
	user-select none
	background url("../img/logo.svg")
}

.header {
	text-align center
	height 340px
	background #fff801
}

.map {
	height 378px
	background #f7f1d8
}

.footer {
	display flex
	align-items flex-start
	justify-content space-between
	padding 52px 0 48px
	line-height 1.56
}

.social-link {
	color inherit
	text-decoration none
}